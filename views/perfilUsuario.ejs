            <h2 class="hr">Profesionales encontrados:</h2>
            <div class="container__cards">
              <% var imageNames = ['abogado.jpg', 'martin.jpg', 'Mauricio.jpg', 'psicologo.jpg']; %>
              <% for (let i = 0; i < profesionalesEncontrados.length; i++) { %>
                <div class="card1">
                    <div class="cover">
                        <!--  <img src="<%= profesionalesEncontrados[i].imagen %>" alt=""> -->
                        <% var randomIndex = Math.floor(Math.random() * imageNames.length); %>
                        <% var randomImage = '/public/img/' + imageNames[randomIndex]; %>
                        <img src="<%= randomImage %>" alt="">
                        <div class="img__back"></div>
                    </div>
                    <div class="description">
                        <h2><%= profesionalesEncontrados[i].nombres %></h2>
                        <h4><%= profesionalesEncontrados[i].profesion %></h4>
                        <p><%= profesionalesEncontrados[i].descripcion %></p>
                        <form action="/comprar/<%= profesionalesEncontrados[i].correo %>" method="post">
                            <button type="submit" class="lulu">Agendar Cita</button>
                        </form>
                    </div>
                </div>
            <% } %>
            
          </div>
        <% } else if (profesionalesEncontrados) { %>
            <p>No se encontraron profesionales en esta área.</p>
        <% } %>

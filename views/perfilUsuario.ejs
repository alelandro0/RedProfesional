                    <% for (let i = 0; i < profesionales.length; i++) { %>
                      <% if (profesionSeleccionada === profesionales[i]) { %>
                        <option value="<%= profesionales[i] %>" selected><%= profesionales[i] %></option>
                      <% } else { %>
                        <option value="<%= profesionales[i] %>"><%= profesionales[i] %></option>
